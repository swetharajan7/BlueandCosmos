# Staging Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://stellarrec_user:staging_password@postgres:5432/stellarrec_staging
POSTGRES_DB=stellarrec_staging
POSTGRES_USER=stellarrec_user
POSTGRES_PASSWORD=staging_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=staging_jwt_secret_key_change_in_production

# OpenAI Configuration
OPENAI_API_KEY=sk-staging-openai-api-key

# SendGrid Configuration
SENDGRID_API_KEY=SG.staging-sendgrid-api-key

# Google OAuth Configuration
GOOGLE_CLIENT_ID=staging-google-client-id
GOOGLE_CLIENT_SECRET=staging-google-client-secret

# AWS Configuration
AWS_ACCESS_KEY_ID=staging-aws-access-key
AWS_SECRET_ACCESS_KEY=staging-aws-secret-key
AWS_REGION=us-east-1

# Monitoring Configuration
SENTRY_DSN=https://staging-sentry-dsn@sentry.io/project
NEW_RELIC_LICENSE_KEY=staging-newrelic-license-key

# Docker Registry
ECR_REGISTRY=123456789012.dkr.ecr.us-east-1.amazonaws.com
IMAGE_TAG=staging-latest

# Application Configuration
NODE_ENV=staging
PORT=3000
CORS_ORIGIN=https://staging.stellarrec.com

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=${SENDGRID_API_KEY}

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=staging_session_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/tmp/uploads

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=combined