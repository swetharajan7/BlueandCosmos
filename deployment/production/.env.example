# Production Environment Configuration

# Database Configuration
DATABASE_URL=postgresql://stellarrec_user:production_password@postgres:5432/stellarrec_production
POSTGRES_DB=stellarrec_production
POSTGRES_USER=stellarrec_user
POSTGRES_PASSWORD=production_password

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=production_jwt_secret_key_change_this

# OpenAI Configuration
OPENAI_API_KEY=sk-production-openai-api-key

# SendGrid Configuration
SENDGRID_API_KEY=SG.production-sendgrid-api-key

# Google OAuth Configuration
GOOGLE_CLIENT_ID=production-google-client-id
GOOGLE_CLIENT_SECRET=production-google-client-secret

# AWS Configuration
AWS_ACCESS_KEY_ID=production-aws-access-key
AWS_SECRET_ACCESS_KEY=production-aws-secret-key
AWS_REGION=us-east-1

# Monitoring Configuration
SENTRY_DSN=https://production-sentry-dsn@sentry.io/project
NEW_RELIC_LICENSE_KEY=production-newrelic-license-key

# Docker Registry
ECR_REGISTRY=123456789012.dkr.ecr.us-east-1.amazonaws.com
IMAGE_TAG=production-latest

# Application Configuration
NODE_ENV=production
PORT=3000
CORS_ORIGIN=https://stellarrec.com

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=${SENDGRID_API_KEY}

# Security Configuration
BCRYPT_ROUNDS=12
SESSION_SECRET=production_session_secret

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=50

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=/app/uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=combined

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BACKUP_BUCKET=stellarrec-backups-production

# SSL Configuration
SSL_CERT_PATH=/etc/nginx/ssl/stellarrec.com.crt
SSL_KEY_PATH=/etc/nginx/ssl/stellarrec.com.key